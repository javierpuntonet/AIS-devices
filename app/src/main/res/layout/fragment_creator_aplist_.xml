<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/aplistcreator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.adddevicecreator.aplist.AplistCreatorFragment">

    <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ap_swipe"
            android:layout_height="0dp" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.433"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_step">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ap_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
            android:text="Wybierz z listy swoje nowe urzÄ…dzenie AIS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_step" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
